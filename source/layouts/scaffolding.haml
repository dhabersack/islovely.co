!!! 5
%html{ :lang => 'en' }
  %head
    %meta{ :charset => 'utf-8' }

    - if current_page.data.description
      %meta{ :name => 'description', :content => "#{ current_page.data.description }" }

    %meta{ :name => 'viewport',    :content => 'width=device-width, initial-scale=1.0' }

    -# always force latest IE rendering engine or request Chrome Frame
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }

    -# Use title if it is in the page's YAML frontmatter
    %title #{ current_page.data.title + ' | ' unless current_page.data.page_class == 'home' }islovely

    %link{ :rel => 'stylesheet', :type => 'text/css', :href => '/assets/stylesheets/style.css' }

    %link{ :rel => 'shortcut icon', :href => '/assets/images/theme/favicon.ico' }

  %body{ :class => data.page.page_class }
    %header
      %div
        %h1= link_to 'islovely', '/'

        %p Magnificent things made by Dom Habersack.

    %nav
      %ol
        %li= link_to 'Home', '/'
        %li= link_to 'Projects', '/projects/'
        %li= link_to 'Blog', '/blog/'
        %li= link_to 'Influences &amp; Values', '/influences-and-values/'
        %li= link_to 'Résumé', '/resume/'
        %li= link_to 'Contact', '/contact/'

    %section
      ~ yield

    %footer
      %div
        %p
          Copyright &copy; 2013<br>
          Dom Habersack, #{ link_to 'islovely.co', 'http://islovely.co/', title: 'Portfolio of Dom Habersack' }<br>
          #{ link_to 'Imprint', '/imprint/' }

        %ol
          %li= link_to 'GitHub', 'http://github.com/dhabersack', title: 'dhabersack on GitHub'
          %li= link_to 'Twitter', 'http://twitter.com/dhabersack', title: '@dhabersack on Twitter'

    = partial 'partials/google-analytics'

    -#= javascript_include_tag  'all'
